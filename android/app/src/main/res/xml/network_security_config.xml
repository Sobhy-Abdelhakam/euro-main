<?xml version="1.0" encoding="utf-8"?>
<network-security-config>
    <!-- Production: Only allow secure HTTPS connections -->
    <base-config cleartextTrafficPermitted="false">
        <trust-anchors>
            <certificates src="system" />
        </trust-anchors>
    </base-config>
    
    <!-- Allow the app's API domain -->
    <domain-config cleartextTrafficPermitted="false">
        <domain includeSubdomains="true">euroassistance.net</domain>
        <domain includeSubdomains="true">api.euroassistance.net</domain>
        <trust-anchors>
            <certificates src="system" />
        </trust-anchors>
    </domain-config>
</network-security-config>
